<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>Create your Passport</h1>
            </div>
        </div>
    </div>
</div>

<br>

<div class="container">
    <form>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input1">First Name</label>
                    <input name="name" type="text" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input2">Last Name</label>
                    <input name="name" type="text" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input3">Phone Number</label>
                    <input name="phone" type="number" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input4">Email</label>
                    <input name="email" type="email" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input5">Password</label>
                    <input name="password" type="text" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label for="Input6">Confirm Password</label>
                    <input name="confirm-password" type="text" class="form-control" required>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <input type="submit" class="form-control submit" value="Submit">
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </form>
</div>